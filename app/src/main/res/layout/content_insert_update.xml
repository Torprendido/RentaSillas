<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.torpre.rentasillas.view.InsertUpdate"
    tools:showIn="@layout/activity_insert_update">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/tabGames"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TabHost
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabGames"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e0e3fe"></TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/roundGames"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:orientation="vertical">

                            <NumberPicker
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/numRoundGames"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/customGames"
                            android:layout_width="match_parent"
                            android:layout_height="283dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mesas redondas"
                                    android:id="@+id/textView6"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginLeft="10dp"/>

                                <NumberPicker
                                    android:layout_width="50dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/numRoundTables"
                                    android:layout_alignParentTop="true"
                                    android:layout_toRightOf="@+id/textView6"
                                    android:layout_margin="10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mesas\nrectangulares"
                                    android:id="@+id/textView7"
                                    android:layout_alignParentTop="true"
                                    android:layout_toRightOf="@+id/numRoundTables"
                                    android:layout_toEndOf="@+id/numRoundTables"
                                    android:layout_marginTop="30dp" />

                                <NumberPicker
                                    android:layout_width="50dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/numRectangularTables"
                                    android:layout_alignTop="@+id/numRoundTables"
                                    android:layout_toRightOf="@+id/textView9"
                                    android:layout_toEndOf="@+id/textView9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="manteles\nredondos"
                                    android:id="@+id/textView8"
                                    android:layout_alignTop="@+id/numRoundCloths"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginLeft="10dp"/>

                                <NumberPicker
                                    android:layout_width="50dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/numRoundCloths"
                                    android:layout_below="@+id/numRoundTables"
                                    android:layout_toLeftOf="@+id/textView7"
                                    android:layout_toStartOf="@+id/textView7"
                                    android:layout_margin="10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="manteles\nresctangulares"
                                    android:id="@+id/textView9"
                                    android:layout_alignTop="@+id/numRoundCloths"
                                    android:layout_alignLeft="@+id/textView7"
                                    android:layout_alignStart="@+id/textView7"
                                    android:layout_marginTop="30dp" />

                                <NumberPicker
                                    android:layout_width="50dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/numRectangularCloths"
                                    android:layout_alignTop="@+id/numRoundCloths"
                                    android:layout_toRightOf="@+id/textView9"
                                    android:layout_toEndOf="@+id/textView9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="sillas"
                                    android:id="@+id/textView10"
                                    android:layout_marginTop="29dp"
                                    android:layout_alignTop="@+id/numChairs"
                                    android:layout_toRightOf="@+id/textView6"
                                    android:layout_toEndOf="@+id/textView6" />

                                <NumberPicker
                                    android:layout_width="wrap_content"
                                    android:layout_height="80dp"
                                    android:id="@+id/numChairs"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rectangularGames"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:orientation="vertical">

                            <NumberPicker
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/numRectangularGames"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp" />

                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TabHost>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cubremanteles"
                android:id="@+id/textView2"
                android:layout_below="@+id/tabGames"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:layout_margin="10dp" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/numPinkCoverCloths"
                android:background="#fbcde3"
                android:layout_above="@+id/address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"/>

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/numBlueCoverCloths"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:background="#969afe" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/numOrangeCoverCloths"
                android:layout_alignTop="@+id/numBlueCoverCloths"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#feb29b"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección y/o persona"
                android:id="@+id/textView3"
                android:layout_below="@+id/numPinkCoverCloths"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/address"
                android:layout_below="@+id/numBlueCoverCloths"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:id="@+id/textView4"
                android:layout_below="@+id/address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/date"
                android:layout_below="@+id/address"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignRight="@+id/address"
                android:layout_alignEnd="@+id/address"
                android:editable="false"
                android:focusable="false"
                android:onClick="showDateDialog"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cobro"
                android:id="@+id/textView5"
                android:layout_below="@+id/date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/payment"
                android:layout_below="@+id/date"
                android:layout_toRightOf="@+id/textView5"
                android:layout_alignRight="@+id/date"
                android:layout_alignEnd="@+id/date"
                android:textAlignment="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:id="@+id/okOrder"
                android:layout_below="@+id/payment"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="okOrder" />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
